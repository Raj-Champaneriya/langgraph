{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Mypy Check",
            "type": "shell",
            "command": "mypy ${file}",
            "problemMatcher": {
                "owner": "python",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+): (\\w+): (.+)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": "build"
        },
        {
            "label": "Mypy Check and Run",
            "dependsOrder": "sequence",
            "dependsOn": ["Mypy Check"],
            "type": "shell",
            "command": "python ${file}",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}